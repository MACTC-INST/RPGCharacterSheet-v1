<Window x:Class="RPGCharacterSheet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGCharacterSheet"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="291*"/>
            <ColumnDefinition Width="165*"/>
            <ColumnDefinition Width="169*"/>
            <ColumnDefinition Width="375*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/background.png"/>
        </Grid.Background>

        <TextBox x:Name="textBoxName" HorizontalAlignment="Left" Margin="41,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" AutomationProperties.HelpText="Enter Name" Grid.Column="0"/>
        <TextBlock HorizontalAlignment="Left" Margin="41,45,0,0" TextWrapping="Wrap" Text="Name:" VerticalAlignment="Top" Grid.Column="0"/>
        <Button x:Name="buttonUpdateName" Content="Update Name" HorizontalAlignment="Left" Margin="41,191,0,0" VerticalAlignment="Top" Width="94" Click="buttonUpdateName_Click" Grid.Column="0"/>
        <TextBlock HorizontalAlignment="Left" Margin="41,102,0,0" TextWrapping="Wrap" Text="STR" VerticalAlignment="Top" Grid.Column="0"/>
        <TextBlock x:Name="textStrength" HorizontalAlignment="Left" Margin="75,102,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Grid.Column="0"/>
        <TextBlock HorizontalAlignment="Left" Margin="41,123,0,0" TextWrapping="Wrap" Text="INT" VerticalAlignment="Top" Grid.Column="0"/>
        <TextBlock x:Name="textIntelligence" HorizontalAlignment="Left" Margin="75,123,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Grid.Column="0"/>
        <TextBlock HorizontalAlignment="Left" Margin="41,144,0,0" TextWrapping="Wrap" Text="DEX" VerticalAlignment="Top" Grid.Column="0"/>
        <TextBlock x:Name="textDexterity" HorizontalAlignment="Left" Margin="75,144,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Grid.Column="0"/>
        <TextBlock HorizontalAlignment="Left" Margin="98,102,0,0" TextWrapping="Wrap" Text="STA" VerticalAlignment="Top"/>
        <TextBlock x:Name="textStamina" HorizontalAlignment="Left" Margin="132,102,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="98,123,0,0" TextWrapping="Wrap" Text="WIS" VerticalAlignment="Top" Grid.Column="0"/>
        <TextBlock x:Name="textWisdom" HorizontalAlignment="Left" Margin="132,123,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Grid.Column="0"/>
        <TextBlock HorizontalAlignment="Left" Margin="98,144,0,0" TextWrapping="Wrap" Text="CHR" VerticalAlignment="Top" Grid.Column="0"/>
        <TextBlock x:Name="textCharisma" HorizontalAlignment="Left" Margin="132,144,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Grid.Column="0"/>
        <Button x:Name="buttonReroll" Content="Re-Roll" HorizontalAlignment="Left" Margin="146,192,0,0" VerticalAlignment="Top" Width="104" Click="buttonReroll_Click" Grid.Column="0"/>
        <ListBox x:Name="listPotentialMembers" Margin="11,66,9,86" Width="NaN" Grid.Column="1">
            <ListBoxItem Content="Mario" Background="#FFFF7171"/>
            <ListBoxItem Content="Princess Peach" Background="#FFF5C56F"/>
            <ListBoxItem Content="Donkey Kong" Background="#FF7FBFDA"/>
            <ListBoxItem Content="Yoshi" Background="#FF74FB88"/>
            <ListBoxItem Content="King Koopa" Background="#FFFD70F8"/>
            <ListBoxItem Content="Luigi" Background="#FF14981C"/>
        </ListBox>
        <TextBlock HorizontalAlignment="Left" Margin="11,50,0,0" TextWrapping="Wrap" Text="Potential Party Members:" VerticalAlignment="Top" Grid.Column="1"/>
        <ListBox x:Name="listPartyMembers" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="14,67,20,86" Width="NaN" Grid.Column="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,51,0,0" TextWrapping="Wrap" Text="Party Members:" VerticalAlignment="Top" Grid.Column="2"/>

    </Grid>
</Window>
